# --------------------------------------------------
# App Configuration
# --------------------------------------------------
PORT=8000
NODE_ENV=development              # Options: development | production | test
APP_NAME=YourAppName
URL=http://localhost:3000

# --------------------------------------------
# JWT Configuration
# --------------------------------------------

# Secret key used to sign Access Tokens (use a 64+ char hex string)
JWT_SECRET=your_access_token_secret_here
JWT_EXPIRATION=15m  # Recommended: 10–30 minutes

# Secret key used to sign Refresh Tokens (must be different from access token secret)
REFRESH_JWT_SECRET=your_refresh_token_secret_here
REFRESH_JWT_EXPIRATION=7d  # Common: 7–30 days

# --------------------------------------------------
# Database Configuration
# --------------------------------------------------
DB_URL=postgres://username:password@localhost:5432/your_database
DB_SYNC=true                     # true only for development

# --------------------------------------------------
# SuperAdmin Initial Setup (Optional)
# --------------------------------------------------
SUPERADMIN_EMAIL=superadmin@example.com
SUPERADMIN_PASSWORD=supersecurepassword

# --------------------------------------------------
# Role Seeding (Initial Setup)
# --------------------------------------------------
SEED_ROLES=true                  # Set to false in production after first run

# --------------------------------------------------
# Mail Configuration
# --------------------------------------------------
MAIL_HOST=smtp.yourmailhost.com
MAIL_PORT=587
MAIL_USER=your_email@example.com
MAIL_PASS=your_email_password
MAIL_FROM="YourApp Support" <support@example.com>

# --------------------------------------------------
# Third-Party Integrations (Optional)
# --------------------------------------------------
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret