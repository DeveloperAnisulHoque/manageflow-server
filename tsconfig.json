{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
     "@user/*":["src/user/*"],
     "@role/*":["src/role/*"],
     "@project/*":["src/project/*"],
     "@task/*":["src/task/*"],
     "@auth/*":["src/auth/*"],
     "@common/*":["src/common/*"],
     "@database/*":["src/database/*"],
    }
  }
}
